        ## | cut -d ' ' -f1 | sed 's/\/.*$//g')
    ### caution: mac got below is divided by ':'
    ## mac $(ip link show p4p1 | grep 'link\/ether' | sed 's/^.*link\/ether //g' \
        ## | cut -d ' ' -f1)
    ## list all network cards
    # ls /sys/class/net
    # alias ip0="ip addr show enp0s3 | grep 'inet ' | sed 's/^.*inet //g' "`
    # `"| cut -d ' ' -f1 | sed 's/\/.*$//g' | sed 's/\./-/g'"
