    # `"| sed 's/^.*link\/ether //g'| cut -d ' ' -f1 | sed 's/:/-/g'"
    alias myfs="ls  /lib/modules/$(uname -r)/kernel/fs"
    allip()
    {
        ip addr show | grep "inet " | sed "s/^.*inet //g" \
            | cut -d " " -f1,4,6,7 | sed "s/scope //g" | sed "s/dynamic //g" \
            | awk "{ print \$2 \"\t\" \$1 }"
    }

fi

